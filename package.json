{
  "name": "signboard",
  "productName": "Signboard",
  "version": "0.4.0",
  "license": "MIT",
  "author": "Colin Devroe - cdevroe.com",
  "main": "main.js",
  "build": {
    "mac": {
      "artifactName": "${productName}.${ext}",
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "afterSign": "scripts/notarize.js",
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "cdevroe",
        "repo": "signboard",
        "releaseType": "draft"
      }
    ]
  },
  "private": true,
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --mac",
    "dist:macarm64": "electron-builder --mac --arm64",
    "dist:macx64": "electron-builder --mac --x64",
    "dist:macuniversal": "electron-builder --mac --universal",
    "dist:winarm64": "electron-builder --win nsis --arm64",
    "dist:winx64": "electron-builder --win nsis --x64",
    "dist:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "dotenv": "^17.2.2",
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "turndown": "^7.2.0"
  }
}
